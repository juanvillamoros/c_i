<h1>Imported Files</h1>

<div class="flickr_pagination">
  <%= will_paginate @imported_files, :container => false %>
</div>
<% if @imported_files.empty? %>
  <div><p>No se ha subido archivos</p></div>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Nombre del archivo</th>
        <th>Archivo creado en: </th>
        <th>Estado</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @imported_files.each do |import| %>
        <tr>
          <td><%= import.file.filename.to_s %></td>
          <td><%= import.created_at %></td>
          <td><%= import.status %></td>
          <% if import.failed_registers.empty? %>
            <td>Sin errores</td>
          <% else %>
            <td><%= link_to 'Failed registers', failed_registers_path(import) %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<div class="flickr_pagination mb-4">
  <%= will_paginate @imported_files, :container => false %>
</div>