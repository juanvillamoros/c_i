<h1>Lista de Contactos</h1>

<div class="flickr_pagination">
  <%= will_paginate @contacts, :container => false %>
</div>
<% if @contacts.empty? %>
  <div><p>Sin Contactos</p></div>
<% else %>
  <table>
    <thead>
      <tr>
        <th>Nombre Completo</th>
        <th>Fecha de Cunpleaños</th>
        <th>Teléfono</th>
        <th>Dirección</th>
        <th>T. Crédito</th>
        <th>Franquicia</th>
        <th>Email</th>
      </tr>
    </thead>
    <tbody>
      <% @contacts.each do |contact| %>
        <tr>
          <td><%= contact.name %></td>
          <td><%= contact.birthdate.to_date.strftime("%Y %B %d") %></td>
          <td><%= contact.phone %></td>
          <td><%= contact.address %></td>
          <td><%= contact.credit_card %></td>
          <td><%= contact.franchise %></td>
          <td><%= contact.email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<div class="flickr_pagination mb-4">
  <%= will_paginate @contacts, :container => false %>
</div>